/*First Time Launch Screen*/
FirstTimeScreen>CenterMiddle>Label {
    width: auto;
}

FirstTimeScreen>CenterMiddle>* {
    margin: 3;
}

FirstTimeScreen>CenterMiddle>Horizontal {
    width: 100%;
    height: auto;
    align: center middle;
}

#firsttime_yes {
    margin-right: 2;
}

/*Login Screen*/
LoginScreen>CenterMiddle {
    width: 50;
    margin-bottom: 1;
}

#login {
    margin-top: 2;
    width: 50;
}

/*Home Screen*/
#current_user {
    margin-right: 1;
}

#logout {
    max-height: 3;
    max-width: 8;
}

Header {
    align: right middle;
    background: $boost;
    height: 1;
    dock: top;
}

#home_buttons {
    grid-size: 3 2;
    height: 50%;
    width: 80%;
}

#home_buttons>* {
    height: 100%;
    width: 100%;
}

#export {
    background: khaki;
    color: black;
}

/*Error modal*/
ModalScreen>Label {
    width: 50;
    height: auto;
    background: $boost;
    content-align: center middle;
}

/*Create user screen*/
UserCreateScreen>CenterMiddle {
    align: center middle;
}

HorizontalGroup {
    width: 50;
    margin-bottom: 1;
}

UserCreateScreen>CenterMiddle>Horizontal {
    width: 50;
    align: center middle;
    height: auto;
}

UserCreateScreen>CenterMiddle>Horizontal>* {
    margin: 1;
}

/*Wildcard classes*/
Screen {
    align: center middle;
}

CenterMiddle {
    width: auto;
    height: auto;
}